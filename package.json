{
  "name": "presenterkit",
  "version": "2.0.0",
  "description": "PresenterKit",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "apps/backup"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"yarn backend:dev\" \"yarn frontend:dev\"",
    "backend:dev": "yarn workspace @presenterkit/backend start:dev",
    "backend:build": "yarn workspace @presenterkit/backend build",
    "frontend:dev": "yarn workspace @presenterkit/frontend dev",
    "frontend:build": "yarn workspace @presenterkit/frontend build",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cookie-bite/presenterkit.git"
  },
  "author": "Ali Mammadli & Sevil Rasulova",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cookie-bite/presenterkit/issues"
  },
  "homepage": "https://github.com/cookie-bite/presenterkit#readme",
  "packageManager": "yarn@4.12.0"
}
